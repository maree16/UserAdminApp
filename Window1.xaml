<Window x:Class="UserAdminApp.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserAdminApp"
        mc:Ignorable="d"
        Title="Employee Records" Height="400" Width="520" BorderBrush="Black" BorderThickness="1" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
        <RowDefinition Height="20" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
        <RowDefinition Height="20" />
    </Grid.RowDefinitions>

    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="20" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="20" />
    </Grid.ColumnDefinitions>




    <TextBlock HorizontalAlignment="Center" Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2" FontSize="30" FontWeight="Bold" Margin="0,0,0,10">Employee Records</TextBlock>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="2"   Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" >
           
            <Label Name = "FirstnameLabel">_FirstName:</Label>

            <Label Name = "LastnameLabel" >_LastName:</Label>
        

    </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" >
            <TextBox Name = "firstnameText" Text = "{Binding FirstName, Mode = TwoWay}" Margin="0,0,10,0" />
            <TextBox Name = "lastNameText" Text = "{Binding LastName, Mode = TwoWay}"/>
        </StackPanel>

        <ItemsControl Grid.Row="4" Grid.RowSpan="2">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1" Margin="10" Padding="10">
                        
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>


        
    </Grid>
</Window>
